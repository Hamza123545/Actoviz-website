# Production Environment Variables for Plesk
# Copy this file to your Plesk hosting environment as .env.local

# Website Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_NAME=Actoviz

# Email Configuration (Choose one service)
# Option 1: EmailJS (Recommended for static sites)
EMAILJS_SERVICE_ID=your_service_id
EMAILJS_TEMPLATE_ID=your_template_id
EMAILJS_USER_ID=your_user_id

# Option 2: SMTP Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-email-password
ADMIN_EMAIL=hello@actoviz.com

# Chatbot Backend (if using external chatbot service)
CHATBOT_BACKEND_URL=https://your-chatbot-backend.com

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your-google-analytics-id
NEXT_PUBLIC_GTM_ID=your-google-tag-manager-id

# Security
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=https://yourdomain.com
